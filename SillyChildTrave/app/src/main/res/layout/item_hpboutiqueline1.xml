<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchWrap"
    android:background="@color/whiteColors"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/dimen28"
    android:paddingTop="@dimen/dimen5"
    android:paddingRight="@dimen/dimen39"
    android:paddingBottom="@dimen/dimen5">

    <ImageView
        android:id="@+id/img_boutiQueLine"
        android:layout_width="@dimen/dimen153"
        android:layout_height="@dimen/dimen106"

        android:scaleType="fitXY"
        android:src="@mipmap/placeholderfigure" />

    <LinearLayout
        style="@style/MatchMatch"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_boutiQueLine"
            style="@style/MatchWrap"
            android:layout_marginTop="@dimen/dimen20"
            android:paddingLeft="@dimen/dimen13"
            android:singleLine="true"
            android:text="芭提雅三天六晚自由行"
            android:textColor="@color/db58Colors"
            android:textSize="@dimen/textsize10" />

        <TextView
            android:id="@+id/tv_synopsis"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen25"
            android:layout_marginTop="@dimen/dimen9"
            android:maxLines="2"
            android:paddingLeft="@dimen/dimen12"
            android:text="美丽的东南亚海岛风情，给你带来不一样的体验。"
            android:textColor="@color/hintColors"
            android:textSize="@dimen/textsize10" />

        <LinearLayout
            style="@style/MatchAuto"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_attentionNum"
                style="@style/WrapWrap"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimen13">

                <!--<ImageView-->
                <!--android:layout_width="@dimen/dimen13"-->
                <!--android:layout_height="@dimen/dimen12"-->
                <!--android:layout_marginTop="@dimen/dimen3"-->
                <!--android:src="@mipmap/hp_attention" />-->

                <ImageView
                    android:id="@+id/img_collection"
                    android:layout_width="@dimen/dimen7"
                    android:layout_height="@dimen/dimen7"
                    android:scaleType="fitXY"
                    android:src="@mipmap/hmpg_collection" />


                <TextView
                    android:id="@+id/tv_attentionNum"
                    style="@style/WrapWrap"
                    android:layout_marginLeft="@dimen/dimen2"
                    android:maxWidth="@dimen/dimen150"
                    android:singleLine="true"
                    android:text="200"
                    android:textColor="@color/fF5656Colors"
                    android:textSize="@dimen/textsize8" />

            </LinearLayout>


            <TextView
                style="@style/AutoWrap"
                android:gravity="right"
                android:text="¥2000起/人"
                android:textColor="@color/fF5858Colors"
                android:textSize="@dimen/textsize10"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/ll_collection"
                style="@style/WrapMatch"
                android:gravity="center|right"
                android:orientation="vertical"
                android:visibility="gone">


                <com.klavor.widget.RatingBar
                    android:id="@+id/ratingbar"
                    android:layout_width="@dimen/dimen112"
                    android:layout_height="@dimen/dimen17"
                    android:layout_marginTop="@dimen/dimen11"
                    app:isIndicator="true"
                    app:numStars="5"
                    app:progress="@mipmap/img_empty_stars"
                    app:progressed="@mipmap/img_real_stars"
                    app:spacing="@dimen/dimen5"
                    app:stepSize="0.1" />

                <TextView
                    android:id="@+id/tv_collectionNum"
                    style="@style/WrapWrap"
                    android:layout_marginTop="@dimen/dimen2"
                    android:singleLine="true"
                    android:text="189"
                    android:textColor="@color/fF5656Colors"
                    android:textSize="@dimen/textsize9" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>